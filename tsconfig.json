{
    "compilerOptions": {
        "lib": ["ES2020", "dom"],
        "module": "commonjs",
        "target": "ES2020",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src"
    ]
}